{
  "name": "boring-browser",
  "version": "1.0.0",
  "description": "Boring Browser Co. - A deliberately minimal browser",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["browser", "minimal", "privacy", "electron"],
  "author": "Boring Browser Co.",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "co.boringbrowser.app",
    "productName": "Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ]
  }
}